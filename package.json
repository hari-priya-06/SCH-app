{
  "name": "student-collaboration-hub-root",
  "version": "1.0.0",
  "private": true,
  "description": "Root package for running backend (FastAPI) and frontend (React) concurrently.",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "powershell -Command \"& .\\venv\\Scripts\\Activate.ps1; cd fastapi-backend; uvicorn main:app --reload\"",
    "dev:frontend": "cd Student-collaboration-hub && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 